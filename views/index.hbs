<script>

$('.carousel').carousel({
  interval: 4000
})

document.getElementById("search-button").addEventListener("click", async function() {
        console.log("search");
        let input = document.getElementById('search-textbox').value;
        
        input=input.toLowerCase();
        let x = document.getElementsByClassName('product-section');
        let y = document.getElementsByClassName('product-name');
        
        for (i = 0; i < x.length; i++) { 
            
            let curr = y[i].innerHTML;
            console.log(curr);
            if (curr.includes(input)) {
                x[i].style.display="block";
            }
            else {
                x[i].style.display="none";                 
            }
        }
    });
</script>


